<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Add New Blog</title>
    <link rel="stylesheet" href="/css/addBlog.css">
  </head>
  <body>
    <%- include('./partials/nav') %>
    <div class="py-3 py-md-5">
      <div class="container">
        <div class="row justify-content-md-center">
          <div class="col-12 col-md-10 col-lg-8 col-xl-7">
            <div class="form-container p-4 p-md-5 rounded shadow-sm">
              <h2 class="text-center mb-4">Create New Blog</h2>
              <form action="/blog/create" method="POST" enctype="multipart/form-data">
                <div class="row gy-3 gy-md-4">
                  <!-- Blog Title -->
                  <div class="col-12">
                    <label for="title" class="form-label">
                      Blog Title<span class="text-danger">*</span>
                    </label>
                    <input
                      type="text"
                      class="form-control"
                      name="title"
                      id="title"
                      placeholder="Enter the blog title"
                      required
                    />
                  </div>

                  <!-- Blog Image Upload -->
                  <div class="col-12">
                    <label for="imageFile" class="form-label">
                      Upload Blog Image<span class="text-danger">*</span>
                    </label>
                    <input
                      type="file"
                      class="form-control"
                      name="imageFile"
                      id="imageFile"
                      accept="image/*"
                      required
                    />
                  </div>

                  <!-- Blog Content -->
                  <div class="col-12">
                    <label for="body" class="form-label">
                      Blog Content<span class="text-danger">*</span>
                    </label>
                    <textarea
                      class="form-control"
                      name="body"
                      id="body"
                      rows="6"
                      placeholder="Write your blog content here..."
                      required
                    ></textarea>
                  </div>
                  
                  <!-- Blog owner-->
                  <input type="hidden" name = "createdBy" value= <%= locals.user._id %>>

                  <!-- Submit Button -->
                  <div class="col-12">
                    <button class="btn btn-primary btn-lg w-100" type="submit">
                      Publish Blog
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('./partials/alert') %>
    <%- include('./partials/scripts') %>
  </body>
</html>
