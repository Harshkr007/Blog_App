<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Blogger_SignUp</title>
    <link rel="stylesheet" href="/css/signUp.css">
    
  </head>
  <body>
    <div class="py-3 py-md-5">
      <div class="container">
        <div class="row justify-content-md-center">
          <div class="col-12 col-md-11 col-lg-8 col-xl-7 col-xxl-6">
            <div class="form-container p-4 p-md-5 rounded shadow-sm">
              <div class="text-center mb-3">
                <img src="/images/logo.png" alt="Logo" width="140" height="110" />
              </div>
              <form action="/user/signup" method="POST" enctype="multipart/form-data">
                <div class="row gy-3 gy-md-4">
                  <div class="col-12">
                    <label for="fullname" class="form-label">
                      Full Name<span class="text-danger">*</span>
                    </label>
                    <div class="input-group">
                      <span class="input-group-text">
                        <img src="/images/fullname.png" alt="Full Name Icon" />
                      </span>
                      <input
                        type="text"
                        class="form-control"
                        name="fullName"
                        id="fullname"
                        required
                      />
                    </div>
                  </div>

                  <div class="col-12">
                    <label for="email" class="form-label">
                      Email<span class="text-danger">*</span>
                    </label>
                    <div class="input-group">
                      <span class="input-group-text">
                        <img src="/images/email.png" alt="Email Icon" />
                      </span>
                      <input
                        type="email"
                        class="form-control"
                        name="email"
                        id="email"
                        required
                      />
                    </div>
                  </div>

                  <div class="col-12">
                    <label for="password" class="form-label">
                      Password<span class="text-danger">*</span>
                    </label>
                    <div class="input-group">
                      <span class="input-group-text">
                        <img src="/images/password.png" alt="Password Icon" />
                      </span>
                      <input
                        type="password"
                        class="form-control"
                        name="password"
                        id="password"
                        required
                      />
                    </div>
                  </div>

                  <div class="col-12">
                    <label class="form-label">
                      Gender<span class="text-danger">*</span>
                    </label>
                    <div class="d-flex gap-3">
                      <div class="form-check">
                        <input
                          class="form-check-input"
                          type="radio"
                          name="gender"
                          value="Male"
                          id="Male"
                          required
                        />
                        <label class="form-check-label" for="Male">Male</label>
                      </div>
                      <div class="form-check">
                        <input
                          class="form-check-input"
                          type="radio"
                          name="gender"
                          value="Female"
                          id="Female"
                          required
                        />
                        <label class="form-check-label" for="Female">Female</label>
                      </div>
                      <div class="form-check">
                        <input
                          class="form-check-input"
                          type="radio"
                          name="gender"
                          value="Others"
                          id="Others"
                          required
                        />
                        <label class="form-check-label" for="Others">Others</label>
                      </div>
                    </div>
                  </div>

                  <div class="col-12">
                    <label for="age" class="form-label">
                      Date of Birth<span class="text-danger">*</span>
                    </label>
                    <input
                      type="date"
                      class="form-control"
                      name="age"
                      id="age"
                      required
                    />
                  </div>

                  <div class="col-12">
                    <label for="profileImage" class="form-label">
                      Profile Image (.png only)<span class="text-danger">*</span>
                    </label>
                    <input
                      type="file"
                      class="form-control"
                      name="avatar"
                      id="profileImage"
                      accept=".png"
                      required
                    />
                  </div>

                  <div class="col-12">
                    <div class="form-check">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        name="terms"
                        id="terms"
                        required
                      />
                      <label class="form-check-label" for="terms">
                        I agree to the
                        <a href="#!" class="link-primary">terms and conditions</a>.
                      </label>
                    </div>
                  </div>

                  <div class="col-12">
                    <button class="btn btn-primary btn-lg w-100" type="submit">
                      Sign Up
                    </button>
                  </div>
                </div>
              </form>
              <div class="text-center mt-4">
                <p class="text-secondary">
                  Already have an account?
                  <a href="/signin" class="link-primary">Sign in</a>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
   
    
    <%- include('./partials/alert') %>
    <%- include('./partials/scripts') %>
  </body>
</html>


